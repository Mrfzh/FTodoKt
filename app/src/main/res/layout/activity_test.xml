<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.TestActivity">


    <Button
        android:id="@+id/btn_test_add_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="添加sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_test_get_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="获取sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_test_add_sp" />

    <Button
        android:id="@+id/btn_test_clear_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="清除sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_test_get_sp" />

</androidx.constraintlayout.widget.ConstraintLayout>